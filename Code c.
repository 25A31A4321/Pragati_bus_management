#include <stdio.h>

struct Bus {
    int busNo;
    char route[30];
    int totalSeats;
    int availableSeats;
};

int main() {
    struct Bus b[10];
    int n, i, choice;

    printf("Enter number of buses: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nEnter details of Bus %d\n", i + 1);
        printf("Bus Number: ");
        scanf("%d", &b[i].busNo);
        printf("Route: ");
        scanf("%s", b[i].route);
        printf("Total Seats: ");
        scanf("%d", &b[i].totalSeats);
        printf("Available Seats: ");
        scanf("%d", &b[i].availableSeats);
    }

    do {
        printf("\n--- Pragati Bus Management ---\n");
        printf("1. Display Bus Details\n");
        printf("2. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1:
            printf("\nBus Details:\n");
            for (i = 0; i < n; i++) {
                printf("\nBus No: %d", b[i].busNo);
                printf("\nRoute: %s", b[i].route);
                printf("\nTotal Seats: %d", b[i].totalSeats);
                printf("\nAvailable Seats: %d\n", b[i].availableSeats);
            }
            break;

        case 2:
            printf("Exiting Program...\n");
            break;

        default:
            printf("Invalid choice!\n");
        }
    } while (choice != 2);

    return 0;
}
